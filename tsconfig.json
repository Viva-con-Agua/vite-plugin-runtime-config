{
    "include": ["src/"],
    "exclude": ["src/script_entrypoint.ts"],
    "compilerOptions": {
        "outDir": "dist/",
        "declaration": true,
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
